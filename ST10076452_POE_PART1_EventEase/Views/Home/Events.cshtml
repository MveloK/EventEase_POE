@model ST10076452_POE_PART1_EventEase.Models.EventsModel

@{
    ViewData["Title"] = "Events Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        h1 {
            font-family: 'Times New Roman', Times, serif;
            color: azure;
            text-shadow: 2px 2px 5px black;
            border: solid;
            padding: 10px 20px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
        }

        body {
            background-image: url('https://assets.venuecrew.com/wp-content/uploads/2020/06/12190042/Dartmouth-House-London-Weddings-Events-Venue-External-Courtyard.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: Arial, sans-serif;
            color: #333;
        }

        .form-container {
            margin-top: 30px;
            border: 2px solid #DFC57B;
            padding: 25px;
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 10px;
            width: 50%;
            margin-left: auto;
            margin-right: auto;
        }

            .form-container div {
                margin-bottom: 15px;
            }

            .form-container label {
                font-size: 18px;
                font-weight: bold;
                color: #333;
                display: block;
                margin-bottom: 5px;
            }

            .form-container input {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border: 2px solid #ddd;
                border-radius: 5px;
                box-sizing: border-box;
                background-color: #f9f9f9;
            }

                .form-container input:focus {
                    border-color: #DFC57B;
                    outline: none;
                }

            .form-container button {
                background-color: #DFC57B;
                color: white;
                padding: 10px 20px;
                font-size: 16px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
                width: 100%;
            }

                .form-container button:hover {
                    background-color: #b89f5d;
                }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Events</h1>
    </div>

    <div class="form-container">
        
        <form asp-controller="Home" asp-action="Events" method="post">
            <div>
                <label asp-for="EventName">Event Name:</label>
                <input type="text" asp-for="EventName" required />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="EventDate">Event Date:</label>
                <input type="date" asp-for="EventDate" required />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Description">Description:</label>
                <input type="text" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>
