@model IEnumerable<BookingsModel>

@{
    ViewData["Title"] = "Bookings Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        h1 {
            font-family: 'Times New Roman', Times, serif;
            color: azure;
            text-shadow: 2px 2px 5px black;
            border: solid;
            padding: 10px 20px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
        }

        body {
            background-image: url('https://assets.venuecrew.com/wp-content/uploads/2024/08/26230728/barbican-conservatory.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: Arial, sans-serif;
            color: #333;
        }

        .table-container {
            margin: 30px auto;
            border: 2px solid #BCECAC;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 10px;
            width: 80%;
        }

        .search-bar {
            text-align: center;
            margin-bottom: 20px;
        }

            .search-bar input[type="text"] {
                padding: 8px;
                width: 250px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

            .search-bar button {
                padding: 8px 15px;
                border: none;
                background-color: #BCECAC;
                color: white;
                border-radius: 5px;
                cursor: pointer;
            }

        .alert {
            padding: 10px 20px;
            margin: 10px auto;
            width: 80%;
            border-radius: 5px;
            font-weight: bold;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #BCECAC;
            color: white;
        }

        .delete-button {
            background-color: crimson;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Bookings</h1>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">@TempData["Error"]</div>
    }

    <div class="table-container">

        <div class="search-bar">
            <form method="get" class="w-full max-w-md mx-auto flex flex-col items-center space-y-4">
                <!-- Search Bar Centered -->
                <input type="text"
                       name="searchTerm"
                       placeholder="Search by Booking ID or Event ID"
                       class="w-full p-2 border border-gray-300 rounded-md text-lg" />

                <!-- Filters Below -->
                <div class="w-full flex flex-col space-y-2">
                    <select name="eventTypeId" class="p-2 border border-gray-300 rounded-md">
                        <option value="">All Event Types</option>
                        @foreach (var type in ViewBag.EventTypes)
                        {
                            <option value="@type.EventTypeId">@type.Name</option>
                        }
                    </select>

                    <input type="date" name="startDate" class="p-2 border border-gray-300 rounded-md" />
                    <input type="date" name="endDate" class="p-2 border border-gray-300 rounded-md" />

                    <label class="flex items-center space-x-2">
                        <input type="checkbox" name="availableOnly" value="true" class="accent-blue-600" />
                        <span>Available Only</span>
                    </label>

                    <button type="submit" class="p-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                        Filter
                    </button>
                </div>
            </form>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Event ID</th>
                    <th>Venue ID</th>
                    <th>Booking Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.BookingID</td>
                            <td>@booking.EventId</td>
                            <td>@booking.VenueId</td>
                            <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <form asp-action="DeleteBooking" method="post" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                                    <input type="hidden" name="id" value="@booking.BookingID" />
                                    <button type="submit" class="delete-button">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" style="text-align: center;">No bookings available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
